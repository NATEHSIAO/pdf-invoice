# 開發環境配置
FROM node:20-alpine

WORKDIR /app

# 安裝基礎依賴
COPY package*.json ./
RUN npm install
RUN npm install -D tailwindcss@latest postcss@latest autoprefixer@latest

COPY . .
COPY .env.local .env.local

# 初始化 Tailwind
RUN npx tailwindcss init -p

# 設定環境變數
ENV NEXT_TELEMETRY_DISABLED=1

# 暴露連接埠
EXPOSE 3000

# 啟動開發伺服器
CMD ["npm", "run", "dev", "--", "--port", "3000", "--hostname", "0.0.0.0"] 